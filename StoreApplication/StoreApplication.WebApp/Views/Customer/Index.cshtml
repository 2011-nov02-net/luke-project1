@model IEnumerable<StoreApplication.DataModel.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Customer" class="btn btn-primary">Add a new Customer</a>
        </div>
        <div class="col-6">
            <a asp-action="SearchByNameForm" asp-controller="Customer" class="btn btn-primary">Search By Name</a>
        </div>
    </div>

    <br /><br />

    
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name:
                </th>
                <th>
                    Last Name:
                </th>
                <th>
                    Email:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.FirstName</td>
                    <td width="50%">@obj.LastName</td>
                    <td width="50%">@obj.Email</td>
                </tr>
            }
        </tbody>
    </table>
    

</div>
