@model IEnumerable<StoreApplication.DataModel.Order>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Order" class="btn btn-primary">Create A New Order</a>
        </div>
        <div class="col-6">
        </div>
        <div class="col-6">
            <a asp-action="ShowOrderSearchFormByCustomer" asp-controller="Order" class="btn btn-success">Search By Customer</a>
        </div>
        <div class="col-6">
            <a asp-action="ShowOrderSearchFormByLocation" asp-controller="Order" class="btn btn-success">Search By Location</a>
        </div>
    </div>

    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>

                <th>
                    Customer ID:
                </th>
                <th>
                    Location ID:
                </th>
                <th>
                    Total:
                </th>
                <th>
                    Order Date:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>

                <td width="50%">@obj.CustomerId</td>
                <td width="50%">@obj.LocationId</td>
                <td width="50%">@obj.Total</td>
                <td width="50%">@obj.OrderDate</td>
                <td width="50%">
                    @Html.ActionLink("Detail", "Detail", new { id = obj.OrderId })
                </td>
                <td width="50%">
                    @Html.ActionLink("Add a Product", "AddProducts", new { id = obj.OrderId })
                </td>
            </tr>
            }
        </tbody>
    </table>



</div>


