@model IEnumerable<StoreApplication.ClassLibrary.Models.Order>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Order" class="btn btn-primary">Create A New Order</a>
        </div>
    </div>

    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>

                <th>
                    Customer ID:
                </th>
                <th>
                    Location ID:
                </th>
                <th>
                    Total:
                </th>
                <th>
                    Order Date:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>

                <td width="50%">@obj.CustomerId</td>
                <td width="50%">@obj.LocationId</td>
                <td width="50%">@obj.Total</td>
                <td width="50%">@obj.OrderDate</td>
                <td width="50%">
                    <a asp-controller="Order" asp-route-Id="@obj.OrderId" asp-action="Detail" class="btn btn-primary">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>


</div>


