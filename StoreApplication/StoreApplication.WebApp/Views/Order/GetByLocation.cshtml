@model IEnumerable<StoreApplication.ClassLibrary.Models.Order>
@{
    ViewData["Title"] = "Orders By Location";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Orders By Location</h2>
        </div>
        <div class="col-6">
        </div>
    </div>

    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Order ID:
                </th>
                <th>
                    Customer ID:
                </th>
                <th>
                    Location ID:
                </th>
                <th>
                    Total:
                </th>
                <th>
                    Order Date:
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {                
                <tr>
                    <td width="50%">@obj.OrderId</td>
                    <td width="50%">@obj.CustomerId</td>
                    <td width="50%">@obj.LocationId</td>
                    <td width="50%">@obj.Total</td>
                    <td width="50%">@obj.OrderDate</td>
                </tr>
            }
        </tbody>
    </table>


</div>

